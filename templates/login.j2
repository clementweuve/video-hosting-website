{% extends "base.j2" %}

{%block title%}Login - Anata{%endblock%}

{%block body%}
<div>
    <h2 class="TitlePage">Login</h2>
    <div class="center">
        <form class="Form_UUID" action="{{ url_for('post_login') }}" method="post" enctype="multipart/form-data" accept-charset="utf-8">
            <div class="field">
                <div class="control">
                    <label>Your email<em class="red">*</em></label><br>
                    <input class="input-fullsize" type="email" name="email" placeholder="Email" autofocus="" minlength="4" pattern="[a-zA-Z0-9.@]+" required>
                </div>
            </div>
            <div class="field">
                <div class="control">
                    <label>Your password<em class="red">*</em></label><br>
                    <input class="input-fullsize" type="password" name="password" placeholder="Password" minlength="6" pattern="[a-zA-Z0-9.@/\#]+" required>
                </div>
            </div>
            <div class="center">
                <button class="ActionButton btn-form-margin">Login</button>
            </div>
        </form>
    </div>
    <div class="center">
        <a href="/signup">Don't have an account ? Sign Up!</a>
    </div>
</div>
{%endblock%}