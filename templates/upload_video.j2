{% extends "base.j2" %}
{%block title%}Upload - Anata{%endblock%}
{%block body%}
<div class="center">
    <form class="Form_Upload" action="{{ url_for('video_post') }}" method="post" enctype="multipart/form-data" accept-charset="utf-8">
        <div id="upload-file" class="upload-file active">
            <div class="field form-area menu-background">
                <div class="control">
                    <div>
                        <h3>Select your file</h3>
                        <svg xmlns="http://www.w3.org/2000/svg" height="128" viewBox="0 -960 960 960" width="128" fill="none">
                            <path d="M220-160q-24 0-42-18t-18-42v-143h60v143h520v-143h60v143q0 24-18 42t-42 18H220Zm230-153v-371L330-564l-43-43 193-193 193 193-43 43-120-120v371h-60Z" fill="currentcolor"/>
                        </svg>
                    </div>
                    <input type="file" name="file" id="file" accept="video/*" onchange="file_uploaded()">
                </div>
            </div>
        </div>
        <div id="upload-parameters" class="upload-parameters">
            <div class=" form-area menu-background center">
                <div>
                    <div class="field">
                        <h3 class="center">Set video settings</h3>
                        <div class="control">
                            <label>Miniature<em class="red">*</em></label><br>
                            <input type="file" name="minia" id="minia" accept=".png, .jpg, .jpeg">
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <label>Video Title<em class="red">*</em></label><br>
                            <input class="input-fullsize" type="text" name="title" placeholder="title" autofocus="" minlength="4" required>
                        </div>
                    </div>
                    <div class="field">
                        <div class="control">
                            <label>Video Description<em class="red">*</em></label><br>
                            <textarea class="textarea-form-upload" type="text" name="description" placeholder="description" autofocus="" minlength="0" required></textarea>
                        </div>
                    </div>
                    <div class="field">
                        <label>Visibility<em class="red">*</em></label><br>
                        <select id="visibility" name="visibility">
                            <option value="0">Public</option>
                            <option value="1">Unlisted</option>
                            <option value="2">Private</option>
                        </select>
                </div>
                <div class="center">
                    <button class="ActionButton btn-form-margin">Submit</button>
                </div>
            </div>
            </div>
        </div>
    </form>
</div>
{%endblock%}

{%block script%}
<script>
    const file_input = document.querySelector("#file");
    const file_div = document.querySelector("#upload-file");
    const parameters_div = document.querySelector("#upload-parameters");

    function file_uploaded() {
        file_div.classList.remove('active');
        parameters_div.classList.add('active');
    };

</script>
{%endblock%}